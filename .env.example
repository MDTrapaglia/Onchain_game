# Database
DATABASE_URL="postgresql://game_user:game_pass@localhost:5432/onchain_game?schema=public"

# Cardano Network (preview, preprod, mainnet)
CARDANO_NETWORK="preview"
BLOCKFROST_API_KEY="your_blockfrost_api_key_here"

# API Server
PORT=3001 # set to 3006 in production when reverse-proxied under /game
ACCESS_TOKEN="your_secure_access_token_here"
FRONTEND_URL="http://localhost:3000" # production: https://matiastrapaglia.space/game

# Frontend (Next.js) on /game
NEXT_PUBLIC_BACKEND_URL="/game"
NEXT_PUBLIC_ACCESS_TOKEN="your_secure_access_token_here"

# Game Server Ed25519 Keys (for signing final stats)
# Generate with: npm run lucid:generate-wallet
GAME_PRIVATE_KEY="your_ed25519_private_key_hex_64_chars"
GAME_PUBLIC_KEY="your_ed25519_public_key_hex_64_chars"

# Wallet Configuration
WALLET_SEED_PHRASE="your 24 word seed phrase here for game operator wallet"

# Auto-submit configuration
AUTO_SUBMIT_ENABLED="true"
SUBMIT_INTERVAL_MS="30000"

# Identity NFT Policy (set after first mint)
IDENTITY_NFT_POLICY_ID=""
